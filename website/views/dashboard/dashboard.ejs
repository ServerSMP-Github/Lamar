<%- include("partials/header", { bot, user, path, title: "Select server" }) %>

<div style="display: flex; flex-wrap: wrap; justify-content: center;">
  <% user.guilds.forEach(guild => {
      const permsOnGuild = new perms(guild.permissions_new);
      if (!permsOnGuild.has(perms.Flags.ManageGuild)) return;
  %>

    <div class="card text-white bg-custom" style="max-width: 18rem; margin: 2rem; min-width: 10em;">
    <%- guild.icon ? `<img src="https://cdn.discordapp.com/icons/${guild.id}/${guild.icon}?size=512" class="card-img-top" style="max-width: 18rem;">` : `<img src="/img/unknown.jpg" class="card-img-top" style="max-width: 18rem;">` %>
      <div class="card-body">
        <h5 class="card-title"><%= guild.name %></h5>
        <% if (bot.guilds.cache.get(guild.id)) { %>
          <p class="card-text">Edit <%= guild.name %>'s settings via the dashboard by clicking the button below.</p>
          <a href="/dashboard/<%- guild.id %>" class="btn btn-success text-white">Edit Settings</a>
        <% } else { %>
          <p class="card-text">Invite the bot to <%= guild.name %> in order to view their guild's settings via the dashboard by clicking the button below.</p>
          <a href="<%= `https://discord.com/api/oauth2/authorize?client_id=${bot.user.id}&guild_id=${guild.id}&permissions=1634234526806&redirect_uri=${encodeURIComponent(`${bot.config.dashboard.domain}${bot.config.dashboard.port == 80 ? "" : `:${bot.config.dashboard.port}`}/callback`)}&response_type=code&scope=bot%20applications.commands%20guilds%20identify` %>" class="btn btn-primary text-white">Invite Bot</a>
        <% } %>
      </div>
    </div>
  <%
      });
  %>

</div>

<%- include("partials/footer") %>